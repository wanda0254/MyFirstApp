<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gmbrMasjid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/masjid"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_below="@id/gmbrMasjid"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/user"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/pass"
        android:layout_marginLeft="165dp"/>

    <Button
        android:id="@+id/regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:
        android:layout_below="@+id/pass"
        android:layout_alignParentRight="true"
        android:layout_marginRight="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Lupa password.?"
        android:layout_below="@id/regis"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/FB"
        android:padding="15dp"
        android:layout_below="@id/gmbrMasjid"
        android:layout_alignLeft="@id/gmbrMasjid"
        android:layout_alignEnd=""
        android:layout_marginTop="280dp"
        android:layout_marginLeft="240dp"

    <ImageView
        android:id="@+id/ig"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/IG"
        android:padding="15dp"
        android:layout_below="@id/gmbrMasjid"
        android:layout_alignRight="@id/gmbrMasjid"
        android:layout_alignEnd="@id/regis"
        android:layout_marginTop="280dp"
        android:layout_marginRight="80dp" />

</RelativeLayout>